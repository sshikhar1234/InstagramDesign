<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
 android:layout_height="match_parent">

<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorStoriesBg">


    <xyz.schwaab.avvylib.AvatarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:avvy_border_color="@android:color/white"
            app:avvy_border_highlight_color="#FF9800"
            app:avvy_border_highlight_color_end="#bf15bc"
            app:avvy_border_thickness="1dp"
            app:avvy_border_thickness_highlight="3dp"
            app:avvy_distance_to_border="2dp"
            app:avvy_highlighted="true"
            app:avvy_loading_arches="5"
            android:src="@drawable/ic_male_two"
            app:avvy_loading_arches_degree_area="90"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/avatarView"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="334"
              android:textSize="20sp"
              android:textColor="@android:color/black"
              android:textStyle="bold"
              android:id="@+id/tvFollowingCtr"
              android:layout_marginEnd="32dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:fontFamily="@font/roboto"
              android:layout_marginTop="32dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/tvFollowersCtr"
              app:layout_constraintHorizontal_bias="0.5"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="following"
              android:textSize="14sp"
              android:gravity="center_vertical"
              android:fontFamily="@font/roboto"
              android:id="@+id/textView14"
              android:layout_marginTop="4dp"
              app:layout_constraintTop_toBottomOf="@+id/tvFollowingCtr"
              app:layout_constraintStart_toStartOf="@+id/tvFollowingCtr"
              app:layout_constraintEnd_toEndOf="@+id/tvFollowingCtr"/>
    <TextView android:layout_width="wrap_content"
              android:text="211K"
              android:textSize="20sp"
              android:textColor="@android:color/black"
              android:textStyle="bold"
              android:layout_height="wrap_content"
              android:id="@+id/tvFollowersCtr"
              android:layout_marginTop="32dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/tvPostsCtr"
              app:layout_constraintHorizontal_bias="0.5"
              android:fontFamily="@font/roboto"
              app:layout_constraintEnd_toStartOf="@+id/tvFollowingCtr"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="followers"
              android:textSize="14sp"
              android:gravity="center_vertical"
              app:layout_constraintStart_toStartOf="@+id/tvFollowersCtr"
              app:layout_constraintEnd_toEndOf="@+id/tvFollowersCtr"
              android:layout_marginTop="4dp"
              android:fontFamily="@font/roboto"
              app:layout_constraintTop_toBottomOf="@+id/tvFollowersCtr" android:id="@+id/textView13"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:textColor="@android:color/black"
              android:textStyle="bold"
              android:text="334"
              android:id="@+id/tvPostsCtr"
              android:fontFamily="@font/roboto"
              android:layout_marginTop="32dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/avatarView"
              android:layout_marginStart="52dp"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toStartOf="@+id/tvFollowersCtr"
              app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="posts"
              android:textSize="14sp"
              android:fontFamily="@font/roboto"
              android:gravity="center_vertical"
              app:layout_constraintStart_toStartOf="@+id/tvPostsCtr"
              app:layout_constraintEnd_toEndOf="@+id/tvPostsCtr"
              android:layout_marginTop="4dp"
              app:layout_constraintTop_toBottomOf="@+id/tvPostsCtr"
              android:id="@+id/textView12"/>

    <TextView android:layout_width="wrap_content"
              android:text="Jefrey Gerson"
              android:textSize="16sp"
              android:fontFamily="@font/roboto"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/avatarView"
              app:layout_constraintEnd_toEndOf="@+id/avatarView"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp"
              app:layout_constraintHorizontal_bias="0.0"
              android:id="@+id/tvUsername"
    />

    <TextView android:layout_width="wrap_content"
              android:fontFamily="@font/roboto_light"
              android:textColor="@android:color/black"
              android:text="Discovering nature around the globe"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:textStyle="bold"
              android:id="@+id/tvBio"
              app:layout_constraintStart_toStartOf="@+id/tvUsername"
              app:layout_constraintTop_toBottomOf="@+id/tvUsername"/>

    <TextView android:layout_width="wrap_content"
              android:fontFamily="@font/roboto_light"
              android:textStyle="bold"
              android:textColor="@color/colorWebLink"
              android:text="blog.johndoe.com"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              app:layout_constraintStart_toStartOf="@+id/tvBio"
              app:layout_constraintTop_toBottomOf="@+id/tvBio" android:id="@+id/textView"/>

    <TextView android:layout_width="163dp"
              android:text="Message"
              android:layout_marginEnd="10dp"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              android:background="@drawable/bg_border_grey"
              android:textColor="@android:color/black"
              android:textStyle="bold"
              android:textSize="12dp"
              android:gravity="center"
              android:fontFamily="@font/roboto"
              android:layout_height="26dp"
              android:id="@+id/tvMessage"
              app:layout_constraintStart_toEndOf="@+id/avatarView"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toStartOf="@+id/tvFollowing"
              app:layout_constraintHorizontal_chainStyle="packed"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView12"/>

    <TextView android:layout_width="35dp"
              android:background="@drawable/bg_border_grey"
              android:padding="5dp"
              android:paddingEnd="5dp"
              android:gravity="center"
              android:layout_marginEnd="5dp"
              android:drawableStart="@drawable/ic_following"
              android:layout_height="25dp"
              android:id="@+id/tvFollowing"
              app:layout_constraintStart_toEndOf="@+id/tvMessage"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toStartOf="@+id/textView3"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView13"/>

    <TextView android:layout_width="25dp"
              android:layout_height="25dp"
              android:background="@drawable/bg_border_grey"
              android:paddingStart="9dp"
              android:gravity="center"
              android:drawableStart="@drawable/ic_arrow_down"
              android:id="@+id/textView3"
              app:layout_constraintStart_toEndOf="@+id/tvFollowing"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView14"/>


    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:id="@+id/rviewProfileStory"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            app:layout_constraintTop_toBottomOf="@+id/textView"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            ></android.support.v7.widget.RecyclerView>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginTop="5dp"
          android:background="@color/profileDeviderGrey"
          app:layout_constraintTop_toBottomOf="@+id/rviewProfileStory" android:id="@+id/view"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="46dp"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="@+id/view" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" android:id="@+id/linearLayout3">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_grid"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:src="@drawable/ic_list"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_tagged"/>
    </LinearLayout>
    <fragment android:layout_width="match_parent"
              android:id="@+id/nestedFragmentWindow"
              android:name="com.example.instagram.ui.fragments.PListFragment" android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
              app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
