<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/colorStoriesBg"
              android:paddingStart="10dp"
              android:paddingTop="5dp"
              xmlns:android="http://schemas.android.com/apk/res/android">
<xyz.schwaab.avvylib.AvatarView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:avvy_border_color="@android:color/white"
        app:avvy_border_highlight_color="@color/colorProfileBordor"
        app:avvy_border_highlight_color_end="@color/colorProfileBordor"
        app:avvy_border_thickness="0dp"
        app:avvy_border_thickness_highlight="3dp"
        app:avvy_distance_to_border="3dp"
        app:avvy_highlighted="true"
        app:avvy_loading_arches="5"
        android:id="@+id/imageViewProfileStory"
        android:src="@drawable/ic_feed_one"
        app:avvy_loading_arches_degree_area="90"
        xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:android="http://schemas.android.com/apk/res/android"/>
    <TextView
            android:layout_width="wrap_content"
            android:text="Faves"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"/>
</LinearLayout>
</LinearLayout>