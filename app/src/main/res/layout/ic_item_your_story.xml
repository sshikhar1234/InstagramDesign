<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="96dp"
              android:paddingTop="10dp"
              android:paddingStart="16dp"

              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/colorStoriesBg"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:src="@drawable/ic_male_two"
                android:layout_height="60dp"/>
        <FrameLayout android:layout_width="wrap_content"
                     android:layout_gravity="bottom|end"
                     android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView android:layout_height="30dp"
                                                          android:layout_width="30dp"
                                                          app:civ_border_color="@android:color/white"
                                                          app:civ_border_width="2dp"
                                                          android:src="@color/colorDarkBlue"
            />
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:textColor="@android:color/white"
          android:textSize="22sp"
          android:layout_marginBottom="2dp"
          android:layout_gravity="center"
android:text="+"/>
        </FrameLayout>

    </FrameLayout>
    <TextView
            android:layout_width="wrap_content"
            android:text="Your Story"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:layout_height="wrap_content"/>
</LinearLayout>