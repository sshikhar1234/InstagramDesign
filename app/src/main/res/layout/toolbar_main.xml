<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/navBarGrey"
        style="@style/Base.Widget.AppCompat.ActionBar"
        android:layout_height="60dp"
        tools:context=".ui.activities.MainActivity">
    <ImageView android:layout_width="wrap_content"
               android:src="@drawable/ic_cam"
               android:paddingTop="18dp"
               android:paddingBottom="18dp"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="0dp" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_insta_logo"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:id="@+id/imageView"/>
    <ImageView android:layout_width="wrap_content"
               android:paddingTop="16dp"

               android:paddingBottom="16dp"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_igtv"
               app:layout_constraintEnd_toStartOf="@+id/imageView2"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView android:layout_width="wrap_content"
               android:paddingTop="18dp"
               android:paddingBottom="18dp"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_messages"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView2"
               android:layout_marginEnd="8dp"/>


    <View android:layout_width="match_parent"
          android:background="@drawable/drop_shadow"
          android:layout_height="1dp"
          android:id="@+id/view2"
          android:layout_marginTop="5dp"
          app:layout_constraintBottom_toBottomOf="parent">

    </View>
</android.support.constraint.ConstraintLayout>